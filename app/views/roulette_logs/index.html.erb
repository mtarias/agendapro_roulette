<p id="notice"><%= notice %></p>

<h1 class="text-center">AgendaPro: Ruleta</h1>

<br>

<div class="container text-center" style="width:80%">
  <div class="row">
    <div class="col-sm-1">
      <b>Ronda</b>
    </div>
    <div class="col-sm-2">
      <b>Apuesta Ruleta</b>
    </div>
    <div class="col-sm-9">
      <div class="col-sm-4">
        <b>Nombre Jugador</b>
      </div>
      <div class="col-sm-4">
        <b>Apuesta Jugador</b>
      </div>
      <div class="col-sm-4">
        <b>Color Apostado Jugador</b>
      </div>
    </div>
    
  </div>
  <br>
  <% @roulette_logs.each do |roulette_log| %>
    <div class="row">
      <div class="col-sm-1">
        <%= roulette_log.roulette_round %>
      </div>
      <div class="col-sm-2">
        <%= roulette_log.roulette_bet %>
      </div>
      <div class="col-sm-9">
        <% roulette_log.player_logs.each do |player_log| %>
          <div class="col-sm-4">
            <%= player_log.player_name %>
          </div>
          <div class="col-sm-4">
            <%= "$#{player_log.player_money_bet}" %>
          </div>
          <div class="col-sm-4">
            <%= player_log.player_color_bet %>
          </div>
        <% end %>
      </div>
    </div>
    <br>
  <% end %>
</div>

<br>

<div class="col-md-12 text-center"> 
    <%= button_to "Ver vista de Jugadores", players_path, 
      :class => "inbox-sf-add-btn tip text-center", :method => :get %>
</div>